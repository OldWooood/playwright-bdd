{
  "compilerOptions": {
    "target": "es2021",
    "module": "node16",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "strict": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "customConditions": ["pw-bdd-dev"],
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.mts"],
  "exclude": ["dist", "test/types-non-strict"]
}
