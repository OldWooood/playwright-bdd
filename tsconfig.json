{
  "compilerOptions": {
    "target": "es2021",
    "module": "node16",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "strict": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["**/*.ts", "**/*.tsx", "knip.config.mts"]
}
